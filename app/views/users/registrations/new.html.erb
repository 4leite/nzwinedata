<h2>Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <% if resource.site_id %>
    <%= f.hidden_field :site_id %>
  <% else %>
    <div class="form-group row">
      <div class="col-auto">
        <%= f.label :site_name %>
      </div>
      <div class="col">
        <%= f.text_field :site_name, autofocus: true, class: "form-control" %>
      </div>
    </div>
  <% end %>


  <div class="form-group row">
    <div class="col-auto">
      <%= f.label :email %>
    </div>
    <div class="col">
      <%= f.email_field :email, autofocus: true, class: "form-control" %>
    </div>
  </div>

  <div class="form-group row">
    <div class="col-auto">

      <%= f.label :roles %>
    </div>
    <div class="col">
      <%= f.select :roles, options_for_select(@roles, [:site_admin]) , {},
        multiple: :true, size: current_user.available_roles.size, class: "form-control" %>
    </div>
  </div>

  <div class="form-group row">
    <div class="col">

      <%= f.submit "Add User", class: "btn btn-primary" %>
    </div>
  </div>
<% end %>

