<%= form_with(model: daily_sale, local: true) do |f| %>
  <%= f.hidden_field :site_id %>
  <div class="form-group row">

    <div class="col-12">
      <% if daily_sale.errors.any? %>
        <div id="error_explanation">
          <%= pluralize daily_sale.errors.count, "error" %> prohibited this daily_sale from being saved:

          <ul>
            <% daily_sale.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>
    </div>
  </div>
  <div class="form-group row">
    <div class="col-12 col-sm-8 col-xl-6">
      <div class="row">
        <div class="col-5">
          <%= f.date_field :sale_date, class: "form-control" %>
        </div>
        <div class="col-2">
        <%= f.number_field :customers, class: "form-control" %>
        </div>
        <div class="col-2">
        <%= f.number_field :units, class: "form-control" %>
        </div>
        <div class="col-3">
        <%= f.number_field :sales_gross, class: "form-control" %>
        </div>
      </div>
    </div>
    <div class="col-12 col-sm-12 col-xl-6">
      <div class="row">
        <%= f.text_field :notes, class: "col-10 form-control" %>
        <%= f.submit "Insert", class: "col-2 btn btn-primary" %>
      </div>
    </div>
  </div>
<% end %>
